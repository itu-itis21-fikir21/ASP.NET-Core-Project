@model UserAddDto

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">User / </span>Add User
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="FirstName" id="defaultFormControlInput" class="form-label">Name</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter name" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" id="defaultFormControlInput" class="form-label">Surname</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter surname" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" id="defaultFormControlInput" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter email" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" id="defaultFormControlInput" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter phone number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleId" id="defaultFormControlInput" class="form-label">User Role</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" id="defaultFormControlInput" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp">
                        </div>
                        


                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
